pipeline {
    agent any

    enviroment {
        NODE1_PRIVATE_KEY=credentials('Key_Node1')
    }
    
    stages {
        stage("Ejecutar ansible playbook") {
            steps {
                sh "whoami"
                sh "pwd"
                sh "ansible-playbook -i ./Desafio_6/ansible_Desafio6/inventory.ini --private-key=$NODE1_PRIVATE_KEY ./Desafio_6/ansible_Desafio6/main.yml"
                         
            }
        }
    }
}